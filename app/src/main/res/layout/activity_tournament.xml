<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tournament">

    <LinearLayout
        android:id="@+id/mainPageContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <TextView
            android:id="@+id/tournNameTV"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/tournNameTV"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/tournNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tournNameHint"/>

        <TextView
            android:id="@+id/tournDateTV"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/tournDate"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/tournDateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="@string/tournDateHint"/>

        <TextView
            android:id="@+id/tournamentBuyInTV"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/tournamentBuyInTV" />
        <EditText
            android:id="@+id/tournBuyInInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <TextView
            android:id="@+id/tournCashOutTV"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/tournamentCashOutTV"
            android:layout_marginTop="20dp"/>
        <EditText
            android:id="@+id/tournCashOutInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <Button
            android:id="@+id/addTournButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/addTournamentButton"
            android:layout_marginTop="24dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>